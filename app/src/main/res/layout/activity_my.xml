<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_color"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bj_gerenzx"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="32dp"
            android:layout_height="32dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/my"
                android:textColor="@color/white"
                android:textSize="17sp"
                />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="18dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/image_head_photo"
                android:layout_width="95.5dp"
                android:layout_height="95.5dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="2.5dp"
                android:src="@mipmap/con_portrait"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20.5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9.5dp"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/icon_girl"
                        />

                    <TextView
                        android:id="@+id/txt_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11.5dp"
                        android:text="@string/age"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/image_sex"
                android:layout_width="12dp"
                android:layout_height="21.5dp"
                android:layout_marginRight="11dp"
                android:src="@mipmap/icon_more"
                />

        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_vison"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:background="@color/blue_303048"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="44dp"
            android:text="@string/my_vison"
            android:textColor="@color/white"
            android:textSize="14sp"
            />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="21.5dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="11dp"
            android:src="@mipmap/icon_more"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_device"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="0.5dp"
        android:background="@color/blue_303048"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14.5dp"
            android:src="@mipmap/icon_archives"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="44dp"
            android:text="@string/my_device"
            android:textColor="@color/white"
            android:textSize="14sp"
            />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="21.5dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="11dp"
            android:src="@mipmap/icon_more"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_follow"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:background="@color/blue_303048"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="44dp"
            android:text="@string/follow"
            android:textColor="@color/white"
            android:textSize="14sp"
            />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="21.5dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="11dp"
            android:src="@mipmap/icon_more"
            />

    </RelativeLayout>


    <Button
        android:id="@+id/bt_exit"
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@color/blue_303048"
        android:text="@string/exit"
        android:textColor="@color/blue_998889a2"
        />


</LinearLayout>